# Project Chimera Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/chimera
REDIS_URL=redis://localhost:6379

# AI Service API Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
MCP_SENSE_TOKEN=your_mcp_token_here

# Blockchain & Commerce
COINBASE_API_KEY=your_coinbase_key_here
COINBASE_API_SECRET=your_coinbase_secret_here
WALLET_PRIVATE_KEY=your_wallet_private_key_here

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=true

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_URL=http://localhost:3000
ELASTICSEARCH_URL=http://localhost:9200

# Agent Configuration
MAX_CONCURRENT_AGENTS=1000
AGENT_TIMEOUT_SECONDS=300
SWARM_CAPACITY=10000

# MCP Server Configuration
MCP_SERVER_TIMEOUT=30
MCP_MAX_RETRIES=3
MCP_BATCH_SIZE=100

# Economic Settings
DEFAULT_AGENT_BUDGET=10000
RISK_TOLERANCE=CONSERVATIVE
TRANSACTION_LIMIT_DAILY=1000
TRANSACTION_LIMIT_MONTHLY=20000